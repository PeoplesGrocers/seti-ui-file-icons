{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}